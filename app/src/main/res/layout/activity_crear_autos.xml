<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CrearAutos">

    <EditText
        android:id="@+id/text_AgarreAuto"
        android:layout_width="180dp"
        android:layout_height="49dp"
        android:layout_marginStart="212dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Agarre"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spTipoLlantas" />

    <Spinner
        android:id="@+id/spTipoMotor"
        android:layout_width="180dp"
        android:layout_height="49dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_Descripcion" />

    <EditText
        android:id="@+id/textNombreAuto"
        android:layout_width="180dp"
        android:layout_height="49dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Nombre Auto"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnCrear"
        android:layout_width="120dp"
        android:layout_height="47dp"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="260dp"
        android:background="@color/colorPrimary"
        android:scrollbarThumbHorizontal="@color/browser_actions_text_color"
        android:scrollbarThumbVertical="@color/browser_actions_text_color"
        android:shadowColor="@color/colorPrimary"
        android:text="Crear "
        android:textColor="@color/browser_actions_bg_grey"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_Actualizar"
        app:layout_constraintStart_toStartOf="parent" />

    <ListView
        android:id="@+id/lvAutos"
        android:layout_width="378dp"
        android:layout_height="238dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_Actualizar" >

        <Button
            android:id="@+id/btn_Actualizar"
            android:layout_width="120dp"
            android:layout_height="47dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="52dp"
            android:layout_marginEnd="28dp"
            android:background="@color/colorPrimary"
            android:onClick="onClick"
            android:text="Actualizar"
            android:textColor="@color/browser_actions_bg_grey"
            android:textColorHighlight="@color/browser_actions_bg_grey"
            android:textSize="18sp" />
    </ListView>

    <Spinner
        android:id="@+id/spCategoria"
        android:layout_width="180dp"
        android:layout_height="49dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/spTipoLlantas"
        android:layout_width="180dp"
        android:layout_height="49dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_Descripcion" />

    <EditText
        android:id="@+id/text_Descripcion"
        android:layout_width="380dp"
        android:layout_height="44dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Descripcion"
        android:inputType="textPersonName"
        app:layout_constraintTop_toBottomOf="@+id/textNombreAuto"
        tools:layout_editor_absoluteX="12dp" />

    <Spinner
        android:id="@+id/spTipoFrenos"
        android:layout_width="177dp"
        android:layout_height="50dp"
        tools:layout_editor_absoluteX="17dp"
        tools:layout_editor_absoluteY="223dp" />

</androidx.constraintlayout.widget.ConstraintLayout>